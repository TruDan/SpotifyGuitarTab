<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:controls="clr-namespace:SpotifyGuitarTab"
    mc:Ignorable="d">

    <Color x:Key="SpotifyPlayerBackgroundLight">#404040</Color>
    <Color x:Key="SpotifyPlayerBackground">#282828</Color>
    <Color x:Key="SpotifyPlayerBackgroundDark">#181818</Color>
    <Color x:Key="SpotifyPlayerBackgroundDarker">#121212</Color>
    <Color x:Key="SpotifyPlayerForeground">#FFFFFF</Color>
    <Color x:Key="SpotifyPlayerForegroundDark">#B3B3B3</Color>
    <Color x:Key="SpotifyPlayerHighlight">#42B853</Color>

    <SolidColorBrush x:Key="SpotifyPlayerBackgroundLightBrush" Color="#404040" />
    <SolidColorBrush x:Key="SpotifyPlayerBackgroundBrush" Color="#282828" />
    <SolidColorBrush x:Key="SpotifyPlayerBackgroundDarkBrush" Color="#181818" />
    <SolidColorBrush x:Key="SpotifyPlayerBackgroundDarkerBrush" Color="#121212" />
    <SolidColorBrush x:Key="SpotifyPlayerForegroundBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="SpotifyPlayerForegroundDarkBrush" Color="#B3B3B3" />
    <SolidColorBrush x:Key="SpotifyPlayerHighlightBrush" Color="#42B853" />

    <FontFamily x:Key="SpotifyFontFamily">Segeo UI</FontFamily>
    <sys:Double x:Key="SpotifyFontSize">14</sys:Double>
    <sys:Double x:Key="SpotifySmallFontSize">10</sys:Double>

