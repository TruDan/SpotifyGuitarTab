    <Style x:Key="SpotifyButton" TargetType="{x:Type ButtonBase}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Foreground" Value="{DynamicResource SpotifyPlayerForegroundBrush}" />

        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="True">
                <Setter Property="Foreground" Value="{DynamicResource SpotifyPlayerForegroundBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{DynamicResource SpotifyPlayerForegroundDarkBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="SpotifyPlayButton" TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource SpotifyButton}">
        <Setter Property="Foreground" Value="{DynamicResource SpotifyPlayerForegroundBrush}" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{DynamicResource SpotifyPlayerForegroundBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Margin" Value="15,10" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver" >
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" Storyboard.TargetName="Border">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="1.1"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" Storyboard.TargetName="Border">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="1.1"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed" />
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="CheckStates">
                                <VisualState x:Name="Checked" />
                                <VisualState x:Name="Unchecked" />
                                <VisualState x:Name="Indeterminate" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="16"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform />
                                </TransformGroup>
                            </Border.RenderTransform>

                        </Border>
                            <Path x:Name="Glyph" Stretch="Uniform" Width="10" Height="10" RenderTransformOrigin="0.5,0.5" Fill="{TemplateBinding Foreground}" IsHitTestVisible="False" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Data" TargetName="Glyph" Value="{DynamicResource IconControllerPauseGeometry}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Data" TargetName="Glyph" Value="{DynamicResource IconControllerPlayGeometry}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="32"/>
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="True">
                <Setter Property="Foreground" Value="{DynamicResource SpotifyPlayerForegroundBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource SpotifyPlayerForegroundBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{DynamicResource SpotifyPlayerForegroundDarkBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource SpotifyPlayerForegroundDarkBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type controls:SpotifyControl}">
        <Setter Property="FontFamily" Value="{StaticResource SpotifyFontFamily}" />
        <Setter Property="MinWidth" Value="800" />
        <Setter Property="Width" Value="800" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SpotifyControl}">
                    <ControlTemplate.Resources>
                        <Style x:Key="SpotifyText" TargetType="{x:Type TextBlock}">
                            <Setter Property="Padding" Value="2" />
                            <Setter Property="FontSize" Value="{DynamicResource SpotifyFontSize}" />
                            <Setter Property="FontFamily" Value="{DynamicResource SpotifyFontFamily}" />
                            <Setter Property="Foreground" Value="{DynamicResource SpotifyPlayerForegroundBrush}" />
                        </Style>
                        <Style x:Key="SpotifySmallText" TargetType="{x:Type TextBlock}">
                            <Setter Property="Padding" Value="2" />
                            <Setter Property="FontSize" Value="{DynamicResource SpotifySmallFontSize}" />
                            <Setter Property="FontFamily" Value="{DynamicResource SpotifyFontFamily}" />
                            <Setter Property="Foreground" Value="{DynamicResource SpotifyPlayerForegroundDarkBrush}" />
                        </Style>
                    </ControlTemplate.Resources>

                    <Border x:Name="TemplateRoot"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            MinWidth="{TemplateBinding MinWidth}"
                            MaxWidth="{TemplateBinding MaxWidth}"
                            Width="{TemplateBinding Width}"
                            
                            MinHeight="{TemplateBinding MinHeight}"
                            MaxHeight="{TemplateBinding MaxHeight}"
                            Height="{TemplateBinding Height}"
                            
                            d:DataContext="{d:DesignInstance Type={x:Type controls:SpotifyControlDataContext}}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" MinWidth="250" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0"
                                Orientation="Horizontal" Margin="15">

                                <Border Background="{StaticResource SpotifyPlayerBackgroundDarkBrush}" Width="56" Height="56" Margin="0,0,8,0" >
                                    <Image x:Name="PART_TrackAlbumArt" Source="{Binding AlbumArtImage}" />
                                </Border>

                                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                    <TextBlock Style="{DynamicResource SpotifyText}" FontSize="14"
                                               Text="{Binding TrackName}" />
                                    <TextBlock Style="{DynamicResource SpotifySmallText}" FontSize="11"
                                               Text="{Binding ArtistName}" />
                                </StackPanel>

                            </StackPanel>

                            <Grid Grid.Row="0" Grid.Column="1" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="30" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Button x:Name="PART_SkipPrevButton"
                                            Style="{DynamicResource SpotifyButton}"
                                            IsEnabled="{Binding CanSkipPrev}">
                                        <Grid>
                                            <Path Data="{StaticResource IconControllerPreviousGeometry}"
                                                  Stretch="Uniform" Width="10" Height="10" RenderTransformOrigin="0.5,0.5"
                                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" />
                                        </Grid>
                                    </Button>
                                    <ToggleButton x:Name="PART_PlayButton" 
                                                  Style="{DynamicResource SpotifyPlayButton}"
                                                  IsEnabled="{Binding CanPlay}" />
                                    <Button x:Name="PART_SkipNextButton" 
                                            Style="{DynamicResource SpotifyButton}"
                                            IsEnabled="{Binding CanSkipNext}">
                                        <Grid>
                                            <Path Data="{StaticResource IconControllerNextGeometry}"
                                                  Stretch="Uniform" Width="10" Height="10" RenderTransformOrigin="0.5,0.5"
                                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" />
                                        </Grid>
                                    </Button>

                                </StackPanel>

                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Right"
                                           Style="{DynamicResource SpotifySmallText}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0:0}:{1:00}">
                                            <Binding Path="PlayPosition.Minutes" />
                                            <Binding Path="PlayPosition.Seconds" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock Grid.Row="1" Grid.Column="2" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Left"
                                           Style="{DynamicResource SpotifySmallText}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0:0}:{1:00}">
                                            <Binding Path="TrackLength.Minutes" />
                                            <Binding Path="TrackLength.Seconds" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                                <ProgressBar x:Name="PART_SeekBar"
                                             Grid.Row="1" Grid.Column="1"
                                             Margin="5,4,5,5"
                                             Height="4" 
                                             BorderThickness="0"
                                             Background="{StaticResource SpotifyPlayerBackgroundLightBrush}"
                                             Foreground="{StaticResource SpotifyPlayerForegroundDarkBrush}"
                                             Value="{Binding PlayPosition.TotalMilliseconds, Mode=OneWay}"
                                             Maximum="{Binding TrackLength.TotalMilliseconds, Mode=OneWay}" 
                                             Style="{DynamicResource SpotifySeekBarStyle}"/>

                            </Grid>
                        </Grid>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Height" Value="86"/>
        <Setter Property="Background" Value="{DynamicResource SpotifyPlayerBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource SpotifyPlayerForegroundBrush}"/>
    </Style>

    <Style x:Key="SpotifySeekBarStyle" TargetType="{x:Type ProgressBar}">
        <Setter Property="Background" Value="{DynamicResource SpotifyPlayerBackgroundLightBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource SpotifyPlayerForegroundDarkBrush}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ProgressBar}">
                    <Grid x:Name="TemplateRoot" Background="{TemplateBinding Background}">
                        <Rectangle Width="{Binding ElementName=TemplateRoot, Path=ActualWidth}" 
                                   Height="{Binding ElementName=TemplateRoot, Path=ActualHeight}" 
                                   Fill="{TemplateBinding Background}" RadiusX="2" RadiusY="2" />

                        <DockPanel x:Name="PART_Track" LastChildFill="False" Margin="0">
                            <Rectangle x:Name="PART_Indicator" 
                                       Width="{Binding ElementName=PART_Indicator, Path=ActualWidth}" 
                                       Height="{Binding ElementName=PART_Track, Path=ActualHeight}" 
                                       Fill="{TemplateBinding Foreground}" RadiusX="2" RadiusY="2" />

                        </DockPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter Property="LayoutTransform" TargetName="TemplateRoot">
                                <Setter.Value>
                                    <RotateTransform Angle="-90"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.Setters>
                    <Setter Property="Foreground" Value="{DynamicResource SpotifyPlayerHighlightBrush}" />
                </Trigger.Setters>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
