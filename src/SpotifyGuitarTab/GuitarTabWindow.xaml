<Window x:Class="SpotifyGuitarTab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotifyGuitarTab"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="810">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="86" />
            <RowDefinition Height="32" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <local:SpotifyControl Grid.Row="0" Grid.Column="0"
                              />

        <Border Grid.Row="1" Grid.Column="0"
                Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}">
<StackPanel Orientation="Horizontal">
                <Button x:Name="RefreshButton" Content="Refresh" />
            </StackPanel>
        </Border>

        <local:WebBrowser x:Name="WebBrowser" Grid.Row="2"
                          Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}"/>
    </Grid>
</Window>

